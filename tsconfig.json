{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "lib",
        "target": "es5",
        "sourceMap": true
    },
    "buildOnSave": true,
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./typings/bundle.d.ts",
        "./node_modules/stone-skin/*.d.ts",
        "./node_modules/arda/*.d.ts",
        "./src/**/*.ts"
    ],
    "files": [
        "./typings/bundle.d.ts",
        "./node_modules/stone-skin/stone-skin.d.ts",
        "./node_modules/arda/arda.d.ts",
        "./src/index.ts"
    ]
}
